/////////////////////////////////////////////////////////////////////////
///	\file main.c
///	\brief This is the main program code.
///
///	\author Ronald Sousa (Opticalworm)
/////////////////////////////////////////////////////////////////////////
#include "common.h"
#include "MCU/led.h"
#include "MCU/usart2.h"
#include "MCU/tick.h"


/////////////////////////////////////////////////////////////////////////
///	\brief the first user code function to be called after the ARM M0
///	has initial.
/////////////////////////////////////////////////////////////////////////
void main(void)
{
    Led_Init();
    Tick_init();
    SerialPort2.Open(115200);

    SerialPort2.SendString("Hello World!\n");

    for ( ;; )
    {

    	Tick_DelayMs(1000); // Delay for 1000ms = 1s
    }
}
