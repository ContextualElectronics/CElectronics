#include "common.h"
#include "MCU/led.h"
#include "MCU/usart2.h"
#include "MCU/tick.h"

#define TERMINALD_BUFFER_SIZE 50

///////////////////////////////////////////////////////////////////////////////
/// \brief Keep track of the number of bytes we received from the computer
///////////////////////////////////////////////////////////////////////////////
uint32_t NumberOfByteReceived;

///////////////////////////////////////////////////////////////////////////////
/// \brief The terminal data buffer
///////////////////////////////////////////////////////////////////////////////
uint8_t Buffer[TERMINALD_BUFFER_SIZE];

///////////////////////////////////////////////////////////////////////////////
/// \brief Init the terminal program
///////////////////////////////////////////////////////////////////////////////
void Terminal_Init(void)
{
    Led_Init();
    Tick_init();
    SerialPort2.Open(57600);

    NumberOfByteReceived = 0;
}

///////////////////////////////////////////////////////////////////////////////
/// \brief run the terminal program
///
///	\return
///
///	\todo update the document return state value
///////////////////////////////////////////////////////////////////////////////
uint_fast8_t Terminal_Process(void)
{

}
